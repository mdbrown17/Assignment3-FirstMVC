@model MovieDetailsVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Twitter Feed</h1>

<div>
    <h4>Average Tweet Sentiment:</h4>
    <div>
        @if (Model.AverageTweetSentiment() !=0)
        {
            <span>@string.Format("{0:n2}", Math.Abs(Model.AverageTweetSentiment())*100)%</span>
        }

        @if (Model.AverageTweetSentiment() > 0)
        {
            <span>Positive</span>
        }
        else if (Model.AverageTweetSentiment() < 0)
        {
            <span>Negative</span>
        }
        else
        {
            <span>Neutral</span>
        }
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Sentiment
                </th>
                <th>
                    Tweet
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tweet in Model.Tweets)
            {
                <tr>
                    <td>
                        @tweet.Sentiment
                    </td>
                    <td>
                        @tweet.TweetText
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

