@model MovieDetailsVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.ImdbHyperlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.ImdbHyperlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.RealeaseYear)
        </dt> 
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.movie.RealeaseYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.movie.Poster)
        </dt>
        <dd class = "col-sm-10">
@*            @Html.DisplayFor(model => model.Poster)
*@
            @if (Model.Poster != null)
            {
                <img width="100" height="100" src="@Url.Action("GetPoster", "Movies", new {Model.Id})" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
